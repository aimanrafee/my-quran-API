{
    "verses": [
        {
            "verse_number": 1,
            "text_uthmani": " وَيْلٌ لِّكُلِّ هُمَزَةٍ لُّمَزَةٍ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Kecelakaan besar bagi tiap-tiap pencaci, pengeji,"
                }
            ]
        },
        {
            "verse_number": 2,
            "text_uthmani": "ٱلَّذِى جَمَعَ مَالًا وَعَدَّدَهُۥ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Yang mengumpulkan harta dan berulang-ulang menghitung kekayaannya;"
                }
            ]
        },
        {
            "verse_number": 3,
            "text_uthmani": "يَحْسَبُ أَنَّ مَالَهُۥٓ أَخْلَدَهُۥ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Ia menyangka bahawa hartanya itu dapat mengekalkannya (dalam dunia ini)!"
                }
            ]
        },
        {
            "verse_number": 4,
            "text_uthmani": "كَلَّا ۖ لَيُنۢبَذَنَّ فِى ٱلْحُطَمَةِ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Tidak! Sesungguhnya dia akan dicampakkan ke dalam \"Al-Hutamah\"."
                }
            ]
        },
        {
            "verse_number": 5,
            "text_uthmani": "وَمَآ أَدْرَىٰكَ مَا ٱلْحُطَمَةُ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan apa jalannya engkau dapat mengetahui, apa dia \"Al-Hutamah\" itu?"
                }
            ]
        },
        {
            "verse_number": 6,
            "text_uthmani": "نَارُ ٱللَّهِ ٱلْمُوقَدَةُ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "(Al-Hutamah) ialah api Allah yang dinyalakan (dengan perintahNya), -"
                }
            ]
        },
        {
            "verse_number": 7,
            "text_uthmani": "ٱلَّتِى تَطَّلِعُ عَلَى ٱلْأَفْـِٔدَةِ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Yang naik menjulang ke hati;"
                }
            ]
        },
        {
            "verse_number": 8,
            "text_uthmani": "إِنَّهَا عَلَيْهِم مُّؤْصَدَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Sesungguhnnya api neraka itu ditutup rapat atas mereka."
                }
            ]
        },
        {
            "verse_number": 9,
            "text_uthmani": "فِى عَمَدٍ مُّمَدَّدَةٍۭ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "(Mereka terikat di situ) pada batang-batang palang yang melintang panjang."
                }
            ]
        }
    ]
}