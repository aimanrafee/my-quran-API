{
    "verses": [
        {
            "verse_number": 1,
            "text_uthmani": " وَٱلَّيْلِ إِذَا يَغْشَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Demi malam apabila ia menyelubungi segala-galanya (dengan gelap-gelitanya),"
                }
            ]
        },
        {
            "verse_number": 2,
            "text_uthmani": "وَٱلنَّهَارِ إِذَا تَجَلَّىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan siang apabila ia lahir terang-benderang;"
                }
            ]
        },
        {
            "verse_number": 3,
            "text_uthmani": "وَمَا خَلَقَ ٱلذَّكَرَ وَٱلْأُنثَىٰٓ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Demi Yang menciptakan (makhluk-makhlukNya) lelaki dan perempuan, (jantan dan betina); -"
                }
            ]
        },
        {
            "verse_number": 4,
            "text_uthmani": "إِنَّ سَعْيَكُمْ لَشَتَّىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Sesungguhnya amal usaha kamu adalah berbagai-bagai keadaannya."
                }
            ]
        },
        {
            "verse_number": 5,
            "text_uthmani": "فَأَمَّا مَنْ أَعْطَىٰ وَٱتَّقَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Jelasnya: adapun orang yang memberikan apa yang ada padanya ke jalan kebaikan dan bertaqwa (mengerjakan suruhan Allah dan meninggalkan segala laranganNya), -"
                }
            ]
        },
        {
            "verse_number": 6,
            "text_uthmani": "وَصَدَّقَ بِٱلْحُسْنَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Serta ia mengakui dengan yakin akan perkara yang baik,"
                }
            ]
        },
        {
            "verse_number": 7,
            "text_uthmani": "فَسَنُيَسِّرُهُۥ لِلْيُسْرَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Maka sesungguhnya Kami akan memberikannya kemudahan untuk mendapat kesenangan (Syurga)."
                }
            ]
        },
        {
            "verse_number": 8,
            "text_uthmani": "وَأَمَّا مَنۢ بَخِلَ وَٱسْتَغْنَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Sebaliknya: orang yang bakhil (daripada berbuat kebajikan) dan merasa cukup dengan kekayaan dan kemewahannya, -"
                }
            ]
        },
        {
            "verse_number": 9,
            "text_uthmani": "وَكَذَّبَ بِٱلْحُسْنَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Serta ia mendustakan perkara yang baik,"
                }
            ]
        },
        {
            "verse_number": 10,
            "text_uthmani": "فَسَنُيَسِّرُهُۥ لِلْعُسْرَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Maka sesungguhnya Kami akan memberikannya kemudahan untuk mendapat kesusahan dan kesengsaraan;"
                }
            ]
        },
        {
            "verse_number": 11,
            "text_uthmani": "وَمَا يُغْنِى عَنْهُ مَالُهُۥٓ إِذَا تَرَدَّىٰٓ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan apakah pertolongan yang dapat diberi kepadanya oleh hartanya apabila ia telah terjerumus (ke dalam azab seksa hari akhirat)?"
                }
            ]
        },
        {
            "verse_number": 12,
            "text_uthmani": "إِنَّ عَلَيْنَا لَلْهُدَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Sesungguhnya tanggungan Kamilah memberi hidayah petunjuk (tentang yang benar dan yang salah)."
                }
            ]
        },
        {
            "verse_number": 13,
            "text_uthmani": "وَإِنَّ لَنَا لَلْـَٔاخِرَةَ وَٱلْأُولَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan sesungguhnya Kamilah yang menguasai hari akhirat dan alam dunia."
                }
            ]
        },
        {
            "verse_number": 14,
            "text_uthmani": "فَأَنذَرْتُكُمْ نَارًا تَلَظَّىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Maka (serentak dengan memberi hidayah petunjuk) Aku juga telah memberi amaran mengingatkan kamu akan api neraka yang marak menjulang,"
                }
            ]
        },
        {
            "verse_number": 15,
            "text_uthmani": "لَا يَصْلَىٰهَآ إِلَّا ٱلْأَشْقَى",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Yang tidak akan menderita bakarannya melainkan orang yang sungguh celaka, -"
                }
            ]
        },
        {
            "verse_number": 16,
            "text_uthmani": "ٱلَّذِى كَذَّبَ وَتَوَلَّىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Yang telah mendustakan (kebenaran) dan berpaling ingkar."
                }
            ]
        },
        {
            "verse_number": 17,
            "text_uthmani": "وَسَيُجَنَّبُهَا ٱلْأَتْقَى",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan (sebaliknya) akan dijauhkan (azab neraka) itu daripada orang yang sungguh bertaqwa, -"
                }
            ]
        },
        {
            "verse_number": 18,
            "text_uthmani": "ٱلَّذِى يُؤْتِى مَالَهُۥ يَتَزَكَّىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Yang mendermakan hartanya dengan tujuan membersihkan dirinya dan hartabendanya,"
                }
            ]
        },
        {
            "verse_number": 19,
            "text_uthmani": "وَمَا لِأَحَدٍ عِندَهُۥ مِن نِّعْمَةٍ تُجْزَىٰٓ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Sedang ia tidak menanggung budi sesiapapun, yang patut di balas,"
                }
            ]
        },
        {
            "verse_number": 20,
            "text_uthmani": "إِلَّا ٱبْتِغَآءَ وَجْهِ رَبِّهِ ٱلْأَعْلَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Hanyalah mengharapkan keredaan Tuhannya Yang Maha Tinggi;"
                }
            ]
        },
        {
            "verse_number": 21,
            "text_uthmani": "وَلَسَوْفَ يَرْضَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan demi sesungguhnya, ia tetap akan berpuas hati (pada hari akhirat, dengan mendapat segala yang diharapkannya)."
                }
            ]
        }
    ]
}