{
    "verses": [
        {
            "verse_number": 1,
            "text_uthmani": " هَلْ أَتَىٰكَ حَدِيثُ ٱلْغَـٰشِيَةِ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Sudahkah sampai kepadamu (wahai Muhammad) perihal hari kiamat yang huru-haranya meliputi?"
                }
            ]
        },
        {
            "verse_number": 2,
            "text_uthmani": "وُجُوهٌ يَوْمَئِذٍ خَـٰشِعَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Muka (orang-orang yang kafir) pada hari itu tunduk kerana merasa hina,"
                }
            ]
        },
        {
            "verse_number": 3,
            "text_uthmani": "عَامِلَةٌ نَّاصِبَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Mereka menjalankan kerja yang berat lagi berpenat lelah,"
                }
            ]
        },
        {
            "verse_number": 4,
            "text_uthmani": "تَصْلَىٰ نَارًا حَامِيَةً",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Mereka tetap menderita bakaran neraka yang amat panas (membakar), -"
                }
            ]
        },
        {
            "verse_number": 5,
            "text_uthmani": "تُسْقَىٰ مِنْ عَيْنٍ ءَانِيَةٍ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Mereka diberi minum dari matair yang menggelegak panasnya."
                }
            ]
        },
        {
            "verse_number": 6,
            "text_uthmani": "لَّيْسَ لَهُمْ طَعَامٌ إِلَّا مِن ضَرِيعٍ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Tiada makanan bagi mereka (di situ) selain dari pokok-pokok yang berduri,"
                }
            ]
        },
        {
            "verse_number": 7,
            "text_uthmani": "لَّا يُسْمِنُ وَلَا يُغْنِى مِن جُوعٍ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Yang tidak menggemokkan, dan tidak pula dapat menghilangkan sedikit kelaparan pun."
                }
            ]
        },
        {
            "verse_number": 8,
            "text_uthmani": "وُجُوهٌ يَوْمَئِذٍ نَّاعِمَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "(Sebaliknya) muka (orang-orang yang beriman) pada hari itu berseri-seri,"
                }
            ]
        },
        {
            "verse_number": 9,
            "text_uthmani": "لِّسَعْيِهَا رَاضِيَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Berpuas hati dengan balasan amal usahanya (yang baik yang telah dikerjakannya di dunia), -"
                }
            ]
        },
        {
            "verse_number": 10,
            "text_uthmani": "فِى جَنَّةٍ عَالِيَةٍ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "(Mereka tinggal menetap) di dalam Syurga tinggi (tempat kedudukannya darjatnya),"
                }
            ]
        },
        {
            "verse_number": 11,
            "text_uthmani": "لَّا تَسْمَعُ فِيهَا لَـٰغِيَةً",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Mereka tidak mendengar di situ sebarang perkataan yang sia-sia,"
                }
            ]
        },
        {
            "verse_number": 12,
            "text_uthmani": "فِيهَا عَيْنٌ جَارِيَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Di dalam Syurga itu ada matair yang mengalir,"
                }
            ]
        },
        {
            "verse_number": 13,
            "text_uthmani": "فِيهَا سُرُرٌ مَّرْفُوعَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Di situ juga ada pelamin-pelamin (berhias) yang tinggi (tempatnya),"
                }
            ]
        },
        {
            "verse_number": 14,
            "text_uthmani": "وَأَكْوَابٌ مَّوْضُوعَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan piala-piala minuman yang disediakan (untuk mereka),"
                }
            ]
        },
        {
            "verse_number": 15,
            "text_uthmani": "وَنَمَارِقُ مَصْفُوفَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan bantal-bantal yang teratur (untuk mereka berbaring atau bersandar),"
                }
            ]
        },
        {
            "verse_number": 16,
            "text_uthmani": "وَزَرَابِىُّ مَبْثُوثَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Serta hamparan-hamparan yang terbentang."
                }
            ]
        },
        {
            "verse_number": 17,
            "text_uthmani": "أَفَلَا يَنظُرُونَ إِلَى ٱلْإِبِلِ كَيْفَ خُلِقَتْ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "(Mengapa mereka yang kafir masih mengingkari akhirat) tidakkah mereka memperhatikan keadaan unta bagaimana ia diciptakan?"
                }
            ]
        },
        {
            "verse_number": 18,
            "text_uthmani": "وَإِلَى ٱلسَّمَآءِ كَيْفَ رُفِعَتْ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan keadaan langit bagaimana ia ditinggikan binaannya.?"
                }
            ]
        },
        {
            "verse_number": 19,
            "text_uthmani": "وَإِلَى ٱلْجِبَالِ كَيْفَ نُصِبَتْ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan keadaan gunung-ganang bagaimana ia ditegakkan?"
                }
            ]
        },
        {
            "verse_number": 20,
            "text_uthmani": "وَإِلَى ٱلْأَرْضِ كَيْفَ سُطِحَتْ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan keadaan bumi bagaimana ia dihamparkan?"
                }
            ]
        },
        {
            "verse_number": 21,
            "text_uthmani": "فَذَكِّرْ إِنَّمَآ أَنتَ مُذَكِّرٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Oleh itu berikanlah sahaja peringatan (wahai Muhammad, kepada manusia, dan janganlah berdukacita kiranya ada yang menolaknya), kerana sesungguhnya engkau hanyalah seorang Rasul pemberi ingatan;"
                }
            ]
        },
        {
            "verse_number": 22,
            "text_uthmani": "لَّسْتَ عَلَيْهِم بِمُصَيْطِرٍ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Bukanlah engkau seorang yang berkuasa memaksa mereka (menerima ajaran Islam yang engkau sampaikan itu)."
                }
            ]
        },
        {
            "verse_number": 23,
            "text_uthmani": "إِلَّا مَن تَوَلَّىٰ وَكَفَرَ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Akan tetapi sesiapa yang berpaling (dari kebenaran) serta ia kufur ingkar, -"
                }
            ]
        },
        {
            "verse_number": 24,
            "text_uthmani": "فَيُعَذِّبُهُ ٱللَّهُ ٱلْعَذَابَ ٱلْأَكْبَرَ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Maka Allah akan menyeksanya dengan azab seksa yang sebesar-besarnya."
                }
            ]
        },
        {
            "verse_number": 25,
            "text_uthmani": "إِنَّ إِلَيْنَآ إِيَابَهُمْ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Sesungguhnya kepada Kamilah kembalinya mereka,"
                }
            ]
        },
        {
            "verse_number": 26,
            "text_uthmani": "ثُمَّ إِنَّ عَلَيْنَا حِسَابَهُم",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Selain dari itu, sesungguhnya tanggungan Kamilah soal menghitung amal mereka."
                }
            ]
        }
    ]
}