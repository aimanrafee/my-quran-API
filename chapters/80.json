{
    "verses": [
        {
            "verse_number": 1,
            "text_uthmani": " عَبَسَ وَتَوَلَّىٰٓ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Ia memasamkan muka dan berpaling,"
                }
            ]
        },
        {
            "verse_number": 2,
            "text_uthmani": "أَن جَآءَهُ ٱلْأَعْمَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Kerana ia didatangi orang buta."
                }
            ]
        },
        {
            "verse_number": 3,
            "text_uthmani": "وَمَا يُدْرِيكَ لَعَلَّهُۥ يَزَّكَّىٰٓ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan apa jalannya engkau dapat mengetahui (tujuannya, wahai Muhammad) ? Barangkali ia mahu membersihkan hatinya (dengan pelajaran ugama yang didapatinya daripadamu)! -"
                }
            ]
        },
        {
            "verse_number": 4,
            "text_uthmani": "أَوْ يَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكْرَىٰٓ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Ataupun ia mahu mendapat peringatan, supaya peringatan itu memberi manfaat kepadanya."
                }
            ]
        },
        {
            "verse_number": 5,
            "text_uthmani": "أَمَّا مَنِ ٱسْتَغْنَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Adapun orang yang merasa keadaannya telah cukup, tidak berhajat lagi (kepada ajaran Al-Quran),"
                }
            ]
        },
        {
            "verse_number": 6,
            "text_uthmani": "فَأَنتَ لَهُۥ تَصَدَّىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Maka engkau bersungguh-sungguh melayaninya."
                }
            ]
        },
        {
            "verse_number": 7,
            "text_uthmani": "وَمَا عَلَيْكَ أَلَّا يَزَّكَّىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Padahal engkau tidak bersalah kalau ia tidak mahu membersihkan dirinya (dari keingkarannya)."
                }
            ]
        },
        {
            "verse_number": 8,
            "text_uthmani": "وَأَمَّا مَن جَآءَكَ يَسْعَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Adapun orang yang segera datang kepadamu,"
                }
            ]
        },
        {
            "verse_number": 9,
            "text_uthmani": "وَهُوَ يَخْشَىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dengan perasaan takutnya (melanggar perintah-perintah Allah), -"
                }
            ]
        },
        {
            "verse_number": 10,
            "text_uthmani": "فَأَنتَ عَنْهُ تَلَهَّىٰ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Maka engkau berlengah-lengah melayaninya."
                }
            ]
        },
        {
            "verse_number": 11,
            "text_uthmani": "كَلَّآ إِنَّهَا تَذْكِرَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Janganlah melakukan lagi yang sedemikian itu! Sebenarnya ayat-ayat Al-Quran adalah pengajaran dan peringatan (yang mencukupi)."
                }
            ]
        },
        {
            "verse_number": 12,
            "text_uthmani": "فَمَن شَآءَ ذَكَرَهُۥ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Maka sesiapa yang mahukan kebaikan dirinya, dapatlah ia mengambil peringatan daripadanya."
                }
            ]
        },
        {
            "verse_number": 13,
            "text_uthmani": "فِى صُحُفٍ مُّكَرَّمَةٍ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "(Ayat-ayat Suci itu tersimpan) dalam naskhah-naskhah yang dimuliakan, -"
                }
            ]
        },
        {
            "verse_number": 14,
            "text_uthmani": "مَّرْفُوعَةٍ مُّطَهَّرَةٍۭ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Yang tinggi darjatnya, lagi suci (dari segala gangguan), -"
                }
            ]
        },
        {
            "verse_number": 15,
            "text_uthmani": "بِأَيْدِى سَفَرَةٍ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "(Terpelihara) di tangan malaikat-malaikat yang menyalinnya dari Lauh Mahfuz;"
                }
            ]
        },
        {
            "verse_number": 16,
            "text_uthmani": "كِرَامٍۭ بَرَرَةٍ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "(Malaikat-malaikat) yang mulia, lagi yang berbakti."
                }
            ]
        },
        {
            "verse_number": 17,
            "text_uthmani": "قُتِلَ ٱلْإِنسَـٰنُ مَآ أَكْفَرَهُۥ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Binasalah hendaknya manusia (yang ingkar) itu, betapa besar kekufurannya?"
                }
            ]
        },
        {
            "verse_number": 18,
            "text_uthmani": "مِنْ أَىِّ شَىْءٍ خَلَقَهُۥ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "(Tidakkah ia memikirkan) dari apakah ia diciptakan oleh Allah? -"
                }
            ]
        },
        {
            "verse_number": 19,
            "text_uthmani": "مِن نُّطْفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dari air mani diciptakanNya, serta dilengkapkan keadaannya dengan persediaan untuk bertanggungjawab;"
                }
            ]
        },
        {
            "verse_number": 20,
            "text_uthmani": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Kemudian jalan (baik dan jahat), dimudahkan Tuhan kepadanya (untuk menimbang dan mengambil mana satu yang ia pilih);"
                }
            ]
        },
        {
            "verse_number": 21,
            "text_uthmani": "ثُمَّ أَمَاتَهُۥ فَأَقْبَرَهُۥ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Kemudian dimatikannya, lalu diperintahkan supaya ia dikuburkan;"
                }
            ]
        },
        {
            "verse_number": 22,
            "text_uthmani": "ثُمَّ إِذَا شَآءَ أَنشَرَهُۥ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Kemudian apabila Allah kehendaki dibangkitkannya (hidup semula)."
                }
            ]
        },
        {
            "verse_number": 23,
            "text_uthmani": "كَلَّا لَمَّا يَقْضِ مَآ أَمَرَهُۥ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Janganlah hendaknya ia kufur ingkar lagi! Sebenarnya ia belum menunaikan apa yang diperintahkan kepadanya."
                }
            ]
        },
        {
            "verse_number": 24,
            "text_uthmani": "فَلْيَنظُرِ ٱلْإِنسَـٰنُ إِلَىٰ طَعَامِهِۦٓ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "(Kalaulah ia tidak memikirkan asal dan kesudahan dirinya), maka hendaklah manusia melihat kepada makanannya (bagaimana kami mentadbirkannya):"
                }
            ]
        },
        {
            "verse_number": 25,
            "text_uthmani": "أَنَّا صَبَبْنَا ٱلْمَآءَ صَبًّا",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Sesungguhnya kami telah mencurahkan hujan dengan curahan yang menakjubkan."
                }
            ]
        },
        {
            "verse_number": 26,
            "text_uthmani": "ثُمَّ شَقَقْنَا ٱلْأَرْضَ شَقًّا",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Kemudian kami belah-belahkan bumi dengan belahan yang sesuai dengan tumbuh-tumbuhan, -"
                }
            ]
        },
        {
            "verse_number": 27,
            "text_uthmani": "فَأَنۢبَتْنَا فِيهَا حَبًّا",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Lalu Kami tumbuhkan pada bumi biji-bijian,"
                }
            ]
        },
        {
            "verse_number": 28,
            "text_uthmani": "وَعِنَبًا وَقَضْبًا",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan buah anggur serta sayur-sayuran,"
                }
            ]
        },
        {
            "verse_number": 29,
            "text_uthmani": "وَزَيْتُونًا وَنَخْلًا",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan Zaitun serta pohon-pohon kurma,"
                }
            ]
        },
        {
            "verse_number": 30,
            "text_uthmani": "وَحَدَآئِقَ غُلْبًا",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan taman-taman yang menghijau subur,"
                }
            ]
        },
        {
            "verse_number": 31,
            "text_uthmani": "وَفَـٰكِهَةً وَأَبًّا",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan berbagai buah-buahan serta bermacam-macam rumput, -"
                }
            ]
        },
        {
            "verse_number": 32,
            "text_uthmani": "مَّتَـٰعًا لَّكُمْ وَلِأَنْعَـٰمِكُمْ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Untuk kegunaan kamu dan binatang-binatang ternak kamu."
                }
            ]
        },
        {
            "verse_number": 33,
            "text_uthmani": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Kemudian (ingatlah keadaan yang berlaku) apabila datang suara jeritan yang dahsyat, -"
                }
            ]
        },
        {
            "verse_number": 34,
            "text_uthmani": "يَوْمَ يَفِرُّ ٱلْمَرْءُ مِنْ أَخِيهِ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Pada hari seseorang itu lari dari saudaranya,"
                }
            ]
        },
        {
            "verse_number": 35,
            "text_uthmani": "وَأُمِّهِۦ وَأَبِيهِ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan ibunya serta bapanya,"
                }
            ]
        },
        {
            "verse_number": 36,
            "text_uthmani": "وَصَـٰحِبَتِهِۦ وَبَنِيهِ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan isterinya serta anak-anaknya; -"
                }
            ]
        },
        {
            "verse_number": 37,
            "text_uthmani": "لِكُلِّ ٱمْرِئٍ مِّنْهُمْ يَوْمَئِذٍ شَأْنٌ يُغْنِيهِ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Kerana tiap-tiap seorang dari mereka pada hari itu, ada perkara-perkara yang cukup untuk menjadikannya sibuk dengan hal dirinya sahaja."
                }
            ]
        },
        {
            "verse_number": 38,
            "text_uthmani": "وُجُوهٌ يَوْمَئِذٍ مُّسْفِرَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Muka (orang-orang yang beriman) pada hari itu berseri-seri,"
                }
            ]
        },
        {
            "verse_number": 39,
            "text_uthmani": "ضَاحِكَةٌ مُّسْتَبْشِرَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Tertawa, lagi bersuka ria;"
                }
            ]
        },
        {
            "verse_number": 40,
            "text_uthmani": "وَوُجُوهٌ يَوْمَئِذٍ عَلَيْهَا غَبَرَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Dan muka (orang-orang yang ingkar) pada hari itu penuh berdebu,"
                }
            ]
        },
        {
            "verse_number": 41,
            "text_uthmani": "تَرْهَقُهَا قَتَرَةٌ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Diliputi oleh warna hitam legam dan gelap-gelita. -"
                }
            ]
        },
        {
            "verse_number": 42,
            "text_uthmani": "أُو۟لَـٰٓئِكَ هُمُ ٱلْكَفَرَةُ ٱلْفَجَرَةُ",
            "translations": [
                {
                    "resource_id": 39,
                    "text": "Mereka itu ialah orang-orang yang kafir, yang derhaka."
                }
            ]
        }
    ]
}